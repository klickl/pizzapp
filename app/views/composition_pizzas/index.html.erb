<h1>Listing composition_pizzas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @composition_pizzas.each do |composition_pizza| %>
      <tr>
        <td><%= link_to 'Show', composition_pizza %></td>
        <td><%= link_to 'Edit', edit_composition_pizza_path(composition_pizza) %></td>
        <td><%= link_to 'Destroy', composition_pizza, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

